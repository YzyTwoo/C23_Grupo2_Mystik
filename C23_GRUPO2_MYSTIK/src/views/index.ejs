<!-- head -->

<%- include('./partials/heads.ejs') %>
<!--FONT AWESOME-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css" crossorigin="anonymous">
<body>
  <!-- header-->
  <%- include('./partials/headerProduct.ejs') %>
    <!-- header-->
    <main class="main-home">

        <!-- CARRUSEL -->
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="/images/banner.jpg" class="d-block w-100 heigth-img" alt="...">
            </div>
            <div class="carousel-item">
              <img src="/images/banner2.png" class="d-block w-100 heigth-img" alt="...">
            </div>
            <div class="carousel-item">
              <img src="/images/banner3.png" class="d-block w-100 heigth-img" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      <!-- fin de carrusel -->

          <!-- SECCION PRODUCTOS -->
          <section class="section-home">
            <% productos.forEach(function(producto) { %>
              <article class="home-article">
                <!-- CUADRADO EDITAR PRODUCTO-->
                <% if (locals.usuario && locals.usuario.roles_id === 1) { %>
                  <a href="/productos/formEditarProducto/<%= producto.id %>" class="edit-product-link">
                      <i class="fas fa-edit edit-icon" id="cuadrado_editar_fondo"></i>
                  </a>
              <% } %>
              <!-- SECCION PRODUCTOS -->
                  <a href="/productos/detalle/<%= producto.id %>">
                      <% producto.imagenes.forEach(function(imagen) { %>
                          <img class="article-img" src="/images/products/<%= imagen.file %>" alt="">
                      <% }) %>
                      <div class="article-description">
                          <h4 class="title-article"><%= producto.nombre %></h4>
                          <p class="article-price">$ <%= producto.precio %></p>
                          <p class="article-pay"><%= producto.descripcion %></p>
                          <a class="detalle-texto" href="/productos/detalle/<%= producto.id %>">VER DETALLE</a>
                      </div>
                  </a>
              </article>
            <% }); %>
        </section>
        <div class="article-description"><a href="#">Ver mas productos</a></div>
          <!-- fin de sección productos -->

          
          <!-- Paginación -->
        <div class="pagination">
          <% if (pagina > 1) { %>
              <a href="/?pagina=<%= pagina - 1 %>" class="btn-pagination">
                <i class="fa-solid fa-circle-chevron-left" style="color: #7E1FBA;"></i>
              </a>
          <% } %>
          <% for(let i = 1; i <= totalPaginas; i++) { %>
              <a href="/?pagina=<%= i %>" class="<%= pagina == i ? 'active' : '' %>"><%= i %></a>
          <% } %>
          <% if (pagina < totalPaginas) { %>
              <a href="/?pagina=<%= parseInt(pagina) + 1 %>" class="btn-pagination">
                <i class="fa-solid fa-circle-chevron-right" style="color: #7E1FBA;"></i>
              </a>
          <% } %>
      </div>
      <!-- Fin de Paginación -->
    
          <!-- ASIDE ESPECIAL -->
          <div class="color-fondo-colecciones">
          <h2 class="colecciones-text"> COLECCIONES </h2>
          </div>
          <aside class="home-aside">
    
            <section class="section-aside">
                <div class="img-aside">
                    <a href="/productos/colecciones"><img src="/images/coleccion1.jpg"    alt=""></a> 
                </div>
    
                <div class="description-aside">
                    <h4>Conoce las colecciones de Mystik</h4>
                    <p>Descubrí con nosotros el bello arte de sentirte comod@</p>
                </div>
    
            </section>
    
            <section class="section-aside">
    
                <div class="img-aside">
                    <a href="/productos/colecciones"><img src="/images/coleccion2.jpg" alt=""></a>
                </div>
    
                <div class="description-aside">
                    <h4>Descubrí las ultimas novedades</h4>
                    <p>Planifica cual será tu proxima adquisición. 
                        ¡no te las podes perder!</p>
                </div>
                
            </section>
          </aside>

      </main>

<!-- footer -->

<%- include('./partials/footer.ejs') %>



    
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

  
</body>

</html>