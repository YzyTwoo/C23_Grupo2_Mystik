<!-- head -->

<%- include('./partials/heads.ejs') %>
<body>
  <!-- header-->
  <%- include('./partials/headerProduct.ejs') %>
    <!-- header-->
    <main class="main-home">

        <!-- CARRUSEL -->
        <div class="carrousel">
        <div id="carouselExampleFade" class="carousel slide carousel-fade">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/images/banner/banner.jpg" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/images/banner/bannerCarruselMysik.png" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/images/banner/bannerCarruselMysik5.png" class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
          <!-- fin de carrusel -->
    
          <!-- SECCION PRODUCTOS -->
    
          <section class="section-home">
    
            <% productos.forEach(function(producto) { %>
                <article class="home-article">
                  <img class="article-img" src="/images/products/<%= producto.image %>" alt="">
                  <div class="article-description">
                    <h4 class="title-article"><%= producto.name %></h4>
                    <p class="article-price"><%= producto.price %></p>
                    <p class="article-pay"><%= producto.description %></p>
                    <a href="productos/detalle/<%= producto.id %>">VER COLECCIÓN</a>
                  </div>
                </article>
              <% }); %>
    
          </section>
    
          <!-- fin de sección productos -->
    
          <!-- ASIDE ESPECIAL -->
    
          <aside class="home-aside">
    
            <section class="section-aside">
    
                <div class="img-aside">
                    <a href="#"><img src="/images/products/productoColeccion.jpg"    alt=""></a> 
                </div>
    
                <div class="description-aside">
                    <h4>SPRING COLLECTION</h4>
                    <p>6 Cuotas sin interés en compras superiores a $60.000</p>
                </div>
    
            </section>
    
            <section class="section-aside">
    
                <div class="img-aside">
                    <a href="#"><img src="/images/products/collectionDibujo.jpg" alt=""></a>
                </div>
    
                <div class="description-aside">
                    <h4>SPRING COLLECTION</h4>
                    <p>6 Cuotas sin interés en compras superiores a $60.000</p>
                </div>
                
            </section>
          </aside>
    
          <!-- fin aside -->
    
          
    
      </main>
    
      <div class="article-description"><a href="#">Ver mas productos</a></div> <br>

      

<!-- footer -->

<%- include('./partials/footer.ejs') %>



    
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

  
</body>

</html>
