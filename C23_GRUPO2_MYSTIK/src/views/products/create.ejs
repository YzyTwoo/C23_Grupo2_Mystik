<!-- head -->

<%- include('../partials/heads.ejs') %>

    <body>
        <!-- header -->
        <%- include("../partials/headerProduct.ejs") %>
            <main>
                <h1 class="titulo-producto">Carga de productos</h1>
                <section class="section-form">

                    <form action="/productos/create" method="POST" class="form-product" enctype="multipart/form-data" id="form-id">
                        <div class="div-form">
                            <label class="subtitulo">Cargar imagen del producto</label>

                            <input type="file" name="imagen_id" id="imagen_id" accept="image/*">
                            <p class="local_error" ><%= locals.errors && errors.imagen_id? errors.imagen_id.msg : null %></p>
                            <input type="text" name="nombre" placeholder="Nombre" id="nombre"required>
                            <p class="local_error" ><%= locals.errors && errors.nombre? errors.nombre.msg : null %></p>
                            <input type="text" name="precio" id="precio" placeholder="Precio" required>
                            <p class="local_error" ><%= locals.errors && errors.precio? errors.precio.msg : null %></p>
                            <textarea name="descripcion" id="descripcion" placeholder="Descripción"></textarea required>
                            <p class="local_error" ><%= locals.errors && errors.descripcion? errors.descripcion.msg : null %></p>
                            </div>

                            <label class="talle-titulo">Talle</label>

        <div class="talle-productos">
            
            <label>S</label>
            <input type="checkbox" tabindex="20" name="talles_id" value="S" />
            <label>M</label>
            <input type="checkbox" tabindex="21" name="talles_id" value="M" />
            <label>L</label>
            <input type="checkbox" tabindex="22" name="talles_id" value="L" />
            <label>XL</label>
            <input type="checkbox" tabindex="23" name="talles_id" value="XL" />
            <label>XXL</label>
            <input type="checkbox" tabindex="24" name="talles_id" value="XXL" />
        </div>
        <label class="category">Categoría</label>
        <select name="categorias_id">
            <option value="buzos">Buzos</option>
            <option value="remeras">Remeras</option>
            <option value="camperas">Camperas</option>
            <option value="colecciones especiales">Colecciones especiales</option>
            <option value="ofertas">Ofertas</option>
        </select>
        <br>
        <label class="colors">Colores disponibles :</label> 
        <div class="box">
        
                <div class="color-box">
                  <input type="checkbox" name="colores_id" value="Negro" id="colores_id">
                  <label for="color" >Negro</label>
                </div>

                <div class="color-box">
                  <input type="checkbox" name="colores_id" value="Blanco" id="colores_id">
                  <label for="color" >Blanco</label>
                </div>

                <div class="color-box">
                  <input type="checkbox" name="colores_id" value="Gris" id="colores_id">
                  <label for="color" >Gris</label>
                </div>
        </div>
        <div class="estock">
        <label>Stock :</label>
        <input type="number" name="stock" id="stock" min="0">
        </div>

        <div class="button-enviar-borrar">
            <a  href="/"><button type="submit" value="Enviar">Enviar</button></a>
            <a href="/"> <button type="reset" value="Borrar">Borrar</button></a>
        </div>
    </form>  
</section>
</main>


<!-- footer -->



</body>